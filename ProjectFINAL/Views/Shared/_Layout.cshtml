    <script src="~/Content/AdminLTE/plugins/bootstrap-switch/js/bootstrap-switch.min.js"></script>
    <!-- BS-Stepper -->
    <script src="~/Content/AdminLTE/plugins/bs-stepper/js/bs-stepper.min.js"></script>
