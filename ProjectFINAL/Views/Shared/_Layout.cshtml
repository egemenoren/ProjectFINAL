    <script src="~/Scripts/localize.js"></script>
    <!-- Page specific script -->
    @if (ViewBag.ErrMsg != null)
    {
        <script>
            Swal.fire({
                title: 'Hata!',
                text: '@ViewBag.ErrMsg',
                icon: 'error',
                confirmButtonText: 'Bir Hata Oluştu.',
                html: '@ViewBag.ErrMsg'
            })
        </script>
    }
    @if (ViewBag.Success != null)
    {
        <script>
            Swal.fire({
                title: 'Başarılı',
                text: '@ViewBag.Success',
                icon: 'success',
                confirmButtonText: 'Güzel',
                html: '@ViewBag.Success'
            })
        </script>
    }
    @if (TempData["Success"] != null)
    {
        <script>
            Swal.fire({
                title: 'Başarılı',
                text: '@TempData["Success"].ToString()',
                icon: 'success',
                confirmButtonText: 'Güzel',
                html: '@TempData["Success"].ToString()'
            })
        </script>
    }
    @if (TempData["ErrMsg"] != null)
    {
        <script>
            Swal.fire({
                title: 'Hata!',
                text: '@TempData["ErrMsg"].ToString()',
                icon: 'error',
                confirmButtonText: 'Bir Hata Oluştu.',
                html: '@TempData["ErrMsg"].ToString()'
            })
        </script>
    }
    <script>

        $(".main-sidebar").css("height", "100vh");

    </script>
    @RenderSection("Script", required: false)
</body>
</html>
